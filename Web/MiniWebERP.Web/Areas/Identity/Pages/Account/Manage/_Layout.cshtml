@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}
    <section>
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h1>Manage your account</h1>
                    <div class="card-body">
                        <h4>Change your account settings</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-3">
                                <partial name="_ManageNav" />
                            </div>
                            <div class="col-md-9">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
