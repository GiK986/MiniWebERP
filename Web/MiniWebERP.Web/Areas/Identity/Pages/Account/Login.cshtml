@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="page login-page">
    <div class="container d-flex align-items-center">
        <div class="form-holder has-shadow">
            <div class="row">
                <!-- Logo & Information Panel-->
                <div class="col-lg-6">
                    <div class="info d-flex align-items-center">
                        <div class="content">
                            <div class="logo">
                                <h1>Mini WebERP</h1>
                            </div>
                            <p>Service Ordering System</p>
                        </div>
                    </div>
                </div>
                <!-- Form Panel    -->
                <div class="col-lg-6 bg-white">
                    <div class="form d-flex align-items-center">
                        <div class="content">
                            <form method="post" class="form-validate">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">

                                    <input asp-for="Input.Email" class="input-material" />
                                    <label asp-for="Input.Email" class="label-material"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">

                                    <input asp-for="Input.Password" required data-msg="Please enter your password" class="input-material" />
                                    <label asp-for="Input.Password" class="label-material"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe" class="rememberMe">
                                            <input asp-for="Input.RememberMe"/>
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Log in</button>
                                </div>
                            </form>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-pass">Forgot Password?</a>
                            <br>
                            <small>Do not have an account? </small>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="signup">Signup</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="copyrights text-center">
        <p>
            Design by <a href="https://github.com/GiK986/MiniWebERP" class="external">GiK986</a>
        </p>
    </div>
</div>
